{
  "collectionName": "components_shared_seos",
  "info": {
    "displayName": "SEO",
    "icon": "search",
    "description": "Componente de SEO para posts"
  },
  "attributes": {
    "meta_title": {
      "type": "string",
      "maxLength": 60
    },
    "meta_description": {
      "type": "text",
      "maxLength": 160
    },
    "og_image": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": ["images"]
    },
    "og_title": {
      "type": "string"
    },
    "og_description": {
      "type": "text"
    },
    "twitter_card": {
      "type": "enumeration",
      "enum": ["summary", "summary_large_image", "app", "player"],
      "default": "summary_large_image"
    },
    "canonical_url": {
      "type": "string"
    },
    "no_index": {
      "type": "boolean",
      "default": false
    }
  }
}
