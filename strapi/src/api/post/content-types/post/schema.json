{
  "kind": "collectionType",
  "collectionName": "posts",
  "info": {
    "singularName": "post",
    "pluralName": "posts",
    "displayName": "Post",
    "description": "Posts do blog GIFLABS"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true,
      "maxLength": 200
    },
    "subtitle": {
      "type": "string"
    },
    "slug": {
      "type": "uid",
      "targetField": "title",
      "required": true
    },
    "content": {
      "type": "richtext",
      "required": true
    },
    "intro": {
      "type": "text"
    },
    "excerpt": {
      "type": "text",
      "maxLength": 300
    },
    "featured_image": {
      "type": "media",
      "multiple": false,
      "required": true,
      "allowedTypes": ["images"]
    },
    "language": {
      "type": "string",
      "required": true,
      "default": "pt-BR"
    },
    "reading_time": {
      "type": "integer",
      "min": 1,
      "default": 5
    },
    "is_featured": {
      "type": "boolean",
      "default": false
    },
    "scheduledAt": {
      "type": "datetime"
    },
    "gallery": {
      "type": "media",
      "multiple": true,
      "required": false,
      "allowedTypes": ["images"]
    },
    "attachments": {
      "type": "media",
      "multiple": true,
      "required": false,
      "allowedTypes": ["files"]
    },
    "video_url": {
      "type": "string"
    },
    "author": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::author.author",
      "inversedBy": "posts",
      "required": true
    },
    "coauthors": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::author.author",
      "inversedBy": "coauthored_posts"
    },
    "categories": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::category.category",
      "inversedBy": "posts",
      "required": true
    },
    "tags": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::tag.tag",
      "inversedBy": "posts",
      "required": true
    },
    "projects": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::project.project",
      "inversedBy": "posts"
    },
    "related_posts": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::post.post"
    },
    "series_name": {
      "type": "string"
    },
    "series_part": {
      "type": "integer"
    },
    "view_count": {
      "type": "integer",
      "default": 0
    },
    "share_count": {
      "type": "integer",
      "default": 0
    },
    "comment_count": {
      "type": "integer",
      "default": 0
    },
    "seo": {
      "type": "component",
      "repeatable": false,
      "component": "shared.seo"
    }
  }
}
